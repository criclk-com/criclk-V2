<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script disable-devtool-auto src="https://cdnjs.cloudflare.com/ajax/libs/disable-devtool/0.3.4/disable-devtool.min.js"></script>
    <title><%= title %></title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background-color: #000;
        }
        
        .player-container {
            width: 100%;
            height: 100%;
            position: relative;
        }
        
        iframe {
            width: 100%;
            height: 100%;
            border: none;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;
        }
        
        .watermark {
            position: absolute;
            bottom: 20px;
            right: 20px;
            color: rgba(255, 255, 255, 0.5);
            font-family: Arial, sans-serif;
            font-size: 14px;
            pointer-events: none;
            z-index: 10;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }
        
        .loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #000;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 20;
            color: white;
            font-family: Arial, sans-serif;
        }
        
        .spinner {
            border: 5px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top: 5px solid #e91e63;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .error-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 30;
            color: white;
            font-family: Arial, sans-serif;
        }
        
        .error-overlay h2 {
            font-size: 24px;
            margin-bottom: 15px;
        }
        
        .error-overlay p {
            font-size: 16px;
            text-align: center;
            margin-bottom: 20px;
            max-width: 80%;
        }
        
        .btn {
            background-color: #e91e63;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .btn:hover {
            background-color: #c2185b;
        }
        
        .fullscreen-hint {
            position: absolute;
            top: 15px;
            left: 15px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            font-family: Arial, sans-serif;
            font-size: 14px;
            z-index: 15;
            display: none;
        }
        
        .fullscreen-btn {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 12px;
            font-size: 14px;
            cursor: pointer;
            z-index: 15;
            display: none;
        }
    </style>
</head>
<body>
    <div class="player-container" id="player-container">
        <!-- The iframe will be inserted here via JavaScript -->
    </div>
    
    <div class="loading-overlay" id="loading-overlay">
        <div class="spinner"></div>
        <p>Loading stream...</p>
    </div>
    
    <div class="error-overlay" id="error-overlay">
        <h2>Stream Error</h2>
        <p>There was a problem loading the stream. This can sometimes happen with mobile devices.</p>
        <p>Try rotating your device to landscape mode or using a different browser.</p>
        <button class="btn" onclick="location.reload()">Retry</button>
    </div>
    
    <% if (isMobile) { %>
    <div class="fullscreen-hint" id="fullscreen-hint">
        Tap anywhere to enter fullscreen mode
    </div>
    
    <button class="fullscreen-btn" id="fullscreen-btn">
        Fullscreen
    </button>
    <% } %>
    
    <div class="watermark">CricketStream.com</div>
    
    <script>
        // Check if device is mobile
        const isMobile = <%= isMobile ? 'true' : 'false' %>;
        
        // Function to load the iframe
        function loadStream() {
            const streamSource = '<%= channel.streamSource %>';
            const playerContainer = document.getElementById('player-container');
            const loadingOverlay = document.getElementById('loading-overlay');
            const errorOverlay = document.getElementById('error-overlay');
            
            // Create the iframe
            const iframe = document.createElement('iframe');
            iframe.id = 'stream-iframe';
            iframe.allow = 'fullscreen; encrypted-media';
            iframe.allowFullscreen = true;
            
            // Set sandbox attributes with correct permissions
            if (isMobile) {
                // For mobile: Add all necessary permissions 
                // but be careful not to break the player
                iframe.sandbox = 'allow-same-origin allow-scripts allow-forms allow-presentation';
            } else {
                // For desktop: Standard sandbox
                iframe.sandbox = 'allow-same-origin allow-scripts allow-forms allow-presentation';
            }
            
            // On load event
            iframe.onload = function() {
                // Hide loading overlay after a short delay
                setTimeout(function() {
                    loadingOverlay.style.display = 'none';
                    
                    // Show fullscreen hint for a few seconds on mobile
                    if (isMobile) {
                        const fullscreenHint = document.getElementById('fullscreen-hint');
                        const fullscreenBtn = document.getElementById('fullscreen-btn');
                        
                        fullscreenHint.style.display = 'block';
                        fullscreenBtn.style.display = 'block';
                        
                        setTimeout(function() {
                            fullscreenHint.style.display = 'none';
                        }, 5000);
                    }
                }, 1000);
            };
            
            // Error handling
            iframe.onerror = function() {
                loadingOverlay.style.display = 'none';
                errorOverlay.style.display = 'flex';
            };
            
            // Set the source
            iframe.src = streamSource;
            
            // Add to the container
            playerContainer.appendChild(iframe);
        }
        
        // Toggle fullscreen
        function toggleFullscreen() {
            const container = document.getElementById('player-container');
            
            if (!document.fullscreenElement) {
                if (container.requestFullscreen) {
                    container.requestFullscreen();
                } else if (container.webkitRequestFullscreen) { /* Safari */
                    container.webkitRequestFullscreen();
                } else if (container.msRequestFullscreen) { /* IE11 */
                    container.msRequestFullscreen();
                }
            } else {
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                } else if (document.webkitExitFullscreen) { /* Safari */
                    document.webkitExitFullscreen();
                } else if (document.msExitFullscreen) { /* IE11 */
                    document.msExitFullscreen();
                }
            }
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            loadStream();
            
            // Add fullscreen toggle events for mobile
            if (isMobile) {
                // Fullscreen button
                document.getElementById('fullscreen-btn').addEventListener('click', toggleFullscreen);
                
                // Tap anywhere to fullscreen
                document.addEventListener('click', function(e) {
                    // Don't trigger on button clicks
                    if (e.target.tagName !== 'BUTTON') {
                        toggleFullscreen();
                    }
                }, { once: true }); // Only trigger once
            }
        });
        
        // Prevent right-click
        document.addEventListener('contextmenu', function(e) {
            e.preventDefault();
            return false;
        });
        
        // Block keyboard shortcuts for developer tools
        document.addEventListener('keydown', function(e) {
            // Prevent Ctrl+Shift+I, Ctrl+Shift+J, F12, Ctrl+U
            if ((e.ctrlKey && e.shiftKey && (e.keyCode === 73 || e.keyCode === 74)) || 
                (e.keyCode === 123) || 
                (e.ctrlKey && e.keyCode === 85)) {
                e.preventDefault();
                return false;
            }
        });
    </script>
</body>
</html>
